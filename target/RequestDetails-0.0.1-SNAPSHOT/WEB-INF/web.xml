<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC 
    "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">


<!--descriptor de despliegue para registrar nuestros servlets con el contenedor -->

<web-app>

	<!-- definimos el servlet -->
	<servlet>
		<servlet-name>RequestDetails</servlet-name>
		<servlet-class>com.demo.javaworld.RequestDetails</servlet-class>
	</servlet>

	<!-- Y su mappeo, la llamada http con el servlet, éste atenderá las peticiones 
		que cumplan con el url pattern /SampleServlet -->
	<servlet-mapping>
		<servlet-name>RequestDetails</servlet-name>
		<url-pattern>SampleServlet</url-pattern>
	</servlet-mapping>

</web-app>





  